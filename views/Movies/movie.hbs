<img
  src="{{this.movie.image}}"
  alt="imagen-pelicula"
  width="200px"
  height="300px"
/>
<a href="/movies">Go back</a>
<h2>{{this.movie.title}}</h2>
<h3>{{this.movie.director}}</h3>
<h4>Stars</h4>
<ul>
  {{#each this.movie.stars}}
    <li>{{this}}</li>
  {{/each}}
</ul>

<p>{{this.movie.description}}</p>
<p>{{this.movie.showtimes}}</p>